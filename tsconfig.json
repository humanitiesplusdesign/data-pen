{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "app",
        "outDir": ".tmp",
        "strictNullChecks": false
    },
    "filesGlob": [
        "app/**/*.ts",
        "app/bower_components/**/*.d.ts",
        "node_modules/@types/**/*.d.ts",
        "!app/bower_components/**/node_modules/**/*.ts",
        "!app/bower_components/**/typings/**/*.ts"
    ],
    "include": [
        "app/components/*.ts",
        "app/services/*.ts",
        "app/models/*.ts",
        "app/filters/*.ts",
        "app/*.ts",
        "app/bower_components/**/*.d.ts",
        "node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "app/bower_components/*/node_modules/**/*.ts",
        "app/bower_components/*/typings/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
