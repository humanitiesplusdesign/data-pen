{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "rootDir": "app",
        "outDir": ".tmp"
    },
    "filesGlob": [
        "app/scripts/**/*.ts",
        "app/bower_components/**/*.d.ts",
        "!app/bower_components/**/node_modules/**/*.ts",
        "!app/bower_components/**/typings/**/*.ts",
        "!app/bower_components/angular-ui-router/api/angular-ui-router.d.ts",
        "typings/global/**/*.d.ts"
    ],
    "files": [
        "app/scripts/app.ts",
        "app/scripts/main-ctrl.ts",
        "typings/global/angular-ui-router/index.d.ts",
        "typings/global/angular/index.d.ts",
        "typings/global/jquery/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
