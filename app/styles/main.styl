// inject:styles
@import '../components/construct-view/construct.css'
@import '../styles/sources.css'
// endinject

html {
  height:100%
}

body {
  height:100%
  overflow-y: scroll
}

.links line {
  stroke: gray
  stroke-width: 1px
}

.fixed {
  transition: 1.5s
  fill: black !important
}

#searchbar {
  position: absolute
  width: 500px
  background-color: gray
  border: 1px solid white
  text-align: center
  color: black
  border-radius: 6px
}

#searchbar ul {
  text-align: left
}

#searchbar li {
  list-style-type: none
  border-bottom: 1px solid white
  margin-bottom: 3px
}

#searchbar input {
  background: #a6a6a6
  width: 500px
  color: white
  border-radius: 6px
}

input:focus {
  outline: none
}

.links line {
  stroke: black
}

.links line:hover, {
  stroke-width: 5px

  transition: .5s
}

.relevant {
  stroke: black !important
  transition: .25s
  stroke-width: 2.5px !important
}

.navbar {
  height: 10px;
  border-bottom: none
  position: absolute;
  background-color: #262626
}

#middle-column {
  position: absolute;
  left: 0;
  padding-left: 0px;
}

#type-bar {
  padding-left: 0px;
  width: 50%
}

#type-bar li {
  display: inline-block
}

body::-webkit-scrollbar {
 display: none
}

.main {
  height: 100%
}

main {
  height: 100%
}

#explorecontainer {
  background-color: #f2f2f2
  border-bottom: 3px solid #d2d2d2
}

.exploretable {
  background-color: #FFFFFf
  overflow-x: scroll
  }

.exploretable th {
  padding: 5px
  color: #ff3333
  border: 1px solid gray
}

.exploretable td {
  white-space: nowrap
  padding: 5px
  overflow: hidden;
  border: 1px solid gray
}

.exploretable tr:nth-child(even) {
  background-color: #d8d8d8
  width: 50px
}

#tabcontainer {
  margin-top: 10px
  text-align: center
  margin-bottom: 20px
}

.widthcontainer {
width: 100%
height: 100%;
overflow: auto
border: 2px solid #f2f2f2
}

#tabcontainer a {
  margin: 20px
  border: 1px solid white
  border-radius: 2p
  padding: 3px
  color: black
  margin-bottom: 20px
  cursor: pointer
}

#tabcontainer a.active {
 border: 1px solid black
}

#layout-choice {
  position: absolute
}

#tablecontainer {
  padding: 20px
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover {
z-index: 1000
position: absolute
}



/* Sunburst */

.sunburst-cell {
  fill: #aaa
}

.sunburst-cell:hover {
  fill: #999
}
