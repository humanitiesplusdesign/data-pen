html {
  height:100%
}

body {
  padding-top: 50px
  height:100%
  overflow-x: hidden;
  overflow-y: scroll;
}


#left-column {
text-align: center
width: 8px
height: 500px
padding-top: 20px
opacity: .5
background-color: #333
color: white
transition: .3s ease
overflow: hidden
border-right: 8px solid black
border-bottom: 1px solid black
display: none;
}

.links line {
stroke: gray
stroke-width: 1px
}

.fixed circle {
transition: 1.5s
fill: black
}

.links line:hover, {
stroke: red
stroke-width: 2px
transition: .5s
cursor: no-drop
}

.relevant {
stroke: black !important
transition: .25s
stroke-width: 2.5px !important
}

.navbar {
  height: 10px;
  position: absolute;
}


#left-column h4 {
color: red
}

#middle-column {
position: absolute;
left: 0;
}

body::-webkit-scrollbar {
 display: none
}

#right-column {
visibility: hidden
width: 200px
height: 75px
position: absolute
z-index: 40
font-size: 10px
border: 1px solid black
border-radius: 3px
overflow-y: scroll;
background-color: gray
}

#right-column::-webkit-scrollbar {
display: none
}

#right-column table {

}

#right-column table {

}

.main {
  height: 100%
}

main {
  height: 100%
}

#explore {
  height: 400px
  border: 1px solid gray
}

#dragLine {
stroke: blue
stroke-width: 1px
}

.tooltip {
position: absolute
z-index: 20
visibility: hidden
color: black
background-color: gray
padding: 2px
border-radius: 2px
}

.node-container {
  width: 50px;
  height: 50px;
}

.node-circle {
  fill: gray
  transition: .2s
}

.node-circle:hover {
r: 11px
z-index: 100
}

.selected-circle {
  fill: green !important
}

.not-selected {

}

.node-circle:hover {
  fill: red
  cursor: pointer
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover {
z-index: 1000
position: absolute
}
