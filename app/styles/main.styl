@import '~bootstrap/dist/css/bootstrap.css'
@import '~font-awesome/css/font-awesome.css'
@import '~codemirror/lib/codemirror.css'
@import '../components/construct-view/construct.styl'
@import '../components/upload/upload.styl'
@import '../components/palette-component/palette-component.styl'

html {
  height:100%
}

body {
  height:100%
  overflow-y: scroll
}

.links line {
  stroke: gray
  stroke-width: 1px
}

.links line {
  stroke: black
}

.links line:hover, {
  stroke-width: 5px

  transition: .5s
}

.relevant {
  stroke: black !important
  transition: .25s
  stroke-width: 2.5px !important
}

.navbar {
  height: 10px;
  border-bottom: none
  position: absolute;
  background-color: #262626
}

#middle-column {
  position: absolute;
  left: 0;
  padding: 0px;
}

body::-webkit-scrollbar {
 display: none
}

.main {
  height: 100%
}

main {
  height: 100%
}

#tabcontainer {
  margin-top: 10px
  text-align: center
  margin-bottom: 20px
}

.widthcontainer {
width: 100%
height: 100%;
overflow: auto
border: 2px solid #f2f2f2
}

#tabcontainer a {
  margin: 20px
  border: 1px solid white
  border-radius: 2px
  padding: 3px
  color: black
  margin-bottom: 20px
  cursor: pointer
}

#tabcontainer a.active {
 border: 1px solid black
}

#layout-choice, #link-options {
  display: inline-block
  margin-left: 2em
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover {
z-index: 1000
position: absolute
}

/* Sunburst */

.sunburst-cell {
  fill: #aaa
}

.sunburst-cell:hover {
  fill: #999
}
