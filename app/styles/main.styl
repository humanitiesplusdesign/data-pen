html {
  height:100%
}

body {
  padding-top: 50px
  height:100%
}

#left-column {
text-align: center
width: 8px
height: 500px
padding-top: 20px
opacity: .5
background-color: #333
color: white
transition: .3s ease
overflow: hidden
border-right: 8px solid black
border-bottom: 1px solid black
}

.links line {
stroke: gray
stroke-width: 1px
}

.fixed circle {
transition: 1.5s
fill: black
}

.links line:hover, {
stroke: red
stroke-width: 2px
transition: .5s
cursor: pointer
}

.relevant {
stroke: black !important
transition: .25s
stroke-width: 2.5px !important
}


#left-column h4 {
color: red
}

#middle-column {
width: 1200px
margin-left: 20px
padding: 20px
}

#right-column {
width: 1000px
margin-left: 150px
padding: 10px
}

#right-column table {

}

.main {
  height: 100%
}

main {
  height: 100%
}

#explore {
  height: 400px
  border: 1px solid gray
}

.tooltip {
position: absolute
z-index: 20
visibility: hidden
color: black
background-color: gray
padding: 2px
border-radius: 2px
}

.node-container {
  width: 50px;
  height: 50px;
}

.node-circle {
  fill: gray
  transition: .2s
}

.node-circle:hover {
r: 11px
}

.node-text {
transition: .1s
}

.node-text:hover {
cursor: default

}

.selected-circle {
  fill: green !important
}

.not-selected {

}

.node-circle:hover {
  fill: red
  cursor: pointer
}

.node-text {
transition: .5s ease
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover
  width: 100%
  max-width: 100%
