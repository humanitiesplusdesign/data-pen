@import '~bootstrap/dist/css/bootstrap.css'
@import '~font-awesome/css/font-awesome.css'
@import '~codemirror/lib/codemirror.css'
@import '../components/components.styl'
@import '~angular-ui-grid/ui-grid.css'
@import '~angularjs-slider/dist/rzslider.css'
@import '~circular-menu/dist/css/circular-menu.css'
@import url('https://fonts.googleapis.com/css?family=Roboto:400,500')
@import url('https://fonts.googleapis.com/css?family=Roboto+Mono')

html {
  height:100%
}

body {
  height:100%
  overflow-y: scroll
	background-color: #f5f5f5
	font-family: 'Roboto', sans-serif
  color: #3c3c3c
}

h1, h2, h3, h4, h5, h6, p {
	font-family: 'Roboto', sans-serif
  font-weight: normal
}

label {
  font-size: 1em
  font-weight: 400
}
select {
  -webkit-appearance: none;
  -moz-appearance: none;
  -ms-appearance: none;
  appearance: none;
  outline: 0;
  border-radius: 0;
  background: none;
}

a {
  color: #1581e6
}

a:hover {
  text-decoration: none
  color: #1581e6
}

.header-title {
  margin-top: 50px

  .header-subtitle {
    font-family: 'Roboto Mono', monospace
    font-size: 0.5em
    color: #466bd3
    margin-left: 20px
  }
}

.keyline {
  border-color: rgba(0, 0, 0, 0.2)
  margin: 0 -15px 0 -15px
}

#test-input {
	width: 50px
	height: 30px
}

.links line {
  stroke: gray
  stroke-width: 1px
}

.links line {
  stroke: black
}

.links line:hover, {
  stroke-width: 5px

  transition: .5s
}

.relevant {
  stroke: black !important
  transition: .25s
  stroke-width: 2.5px !important
}

.navbar {
  height: 10px
  border-bottom: none
  position: absolute
  background-color: #262626
}

#middle-column {
  position: absolute
  left: 0
  padding: 0px
}

body::-webkit-scrollbar {
 display: none
}

.main {
  height: 100%
}

main {
  height: 100%
}

#tabcontainer {
  margin-top: 10px
  text-align: center
  margin-bottom: 20px
}

.widthcontainer {
width: 100%
height: 100%
overflow: auto
border: 2px solid #f2f2f2
}

#tabcontainer a {
  margin: 20px
  border: 1px solid white
  border-radius: 2px
  padding: 3px
  color: black
  margin-bottom: 20px
  cursor: pointer
}

#tabcontainer a.active {
 border: 1px solid black
}

#layout-choice, #link-options {
  display: inline-block
  margin-left: 2em
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0
  padding-left: 0
}

[tree] li {
  list-style-type: none
}

ul {
  padding-left: 15px
}

.group-label {
  font-weight: bold
}

div.checkbox {
  margin-top: 3px
  margin-bottom: 3px
}

.popover {
z-index: 1000
position: absolute
}

/* Sunburst */

.sunburst-cell {
  fill: #aaa
}

.sunburst-cell:hover {
  fill: #999
}

/* Authentication text */

.auth-text {
  float: right
  margin: 50px 0 -70px 0
  font-family: 'Roboto Mono', monospace
  color: rgba(0, 0, 0, 0.7)
  font-size: 0.9em
}
