html {
  height:100%
}

body {
  padding-top: 50px
  height:100%
  overflow-x: hidden;
  overflow-y: scroll;
}


#left-column {
width: 100%
background-color: #ff3333
color: black
z-index: 30
height: 21px
position: absolute
top: 45px
opacity: .7
transition: .4s
}

#left-column:hover{
opacity: 1
cursor: pointer
background-color: #262626
color: white
}

#left-column ul {
list-style-type: none
float: left
}

#left-column li {
float: left
list-style-type: none
margin-right: 10px
}

.links line {
stroke: gray
stroke-width: 1px
}

.fixed circle {
transition: 1.5s
fill: black
}

#searchbar {
position: absolute
width: 500px
background-color: gray
border: 1px solid white
text-align: center
color: black
border-radius: 6px
}

#searchbar ul {
text-align: left
}

#searchbar li {
list-style-type: none
border-bottom: 1px solid white
margin-bottom: 3px
}

#searchbar input {
background: #a6a6a6
width: 500px
position: absolute
color: white
border-radius: 6px
}

input:focus {
outline: none
}

.links line {
stroke: black
}

.links line:hover, {
stroke-width: 5px

transition: .5s
}

.relevant {
stroke: black !important
transition: .25s
stroke-width: 2.5px !important
}

.navbar {
  height: 10px;
  border-bottom: none
  position: absolute;
  background-color: #262626
}


#left-column h4 {
color: red
}

#middle-column {
position: absolute;
left: 0;
}

body::-webkit-scrollbar {
 display: none
}

#right-column {
visibility: hidden
width: 200px
height: 75px
position: absolute
z-index: 40
font-size: 10px
border: 1px solid black
border-radius: 3px
overflow-y: scroll;
background-color: gray
}

#right-column::-webkit-scrollbar {
display: none
}

#right-column table {

}

#right-column table {

}

.main {
  height: 100%
}

main {
  height: 100%
}

#explorecontainer {
  background-color: #f2f2f2
  border-bottom: 3px solid #d2d2d2
}

#exploretable {
  background-color: #FFFFFf
}

#exploretable th {
  color: #ff3333
}

#exploretable tr:nth-child(even) {
  background-color: #d8d8d8
  width: 50px
}

.dragLine {
stroke: #ff3333
stroke-width: 1px
stroke-dasharray: 3,3
}

.tooltip {
position: absolute
z-index: 20
visibility: hidden
color: black
background-color: gray
padding: 2px
border-radius: 2px
}

.node-container {
  width: 50px;
  height: 50px;
}

.node-circle {
  fill: gray
  transition: .2s
}

.node-circle:hover {
r: 11px
z-index: 100
}

.selected-circle {
  fill: green !important
}

.not-selected {

}

.node-circle:hover {
  fill: red
  cursor: pointer
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover {
z-index: 1000
position: absolute
}
