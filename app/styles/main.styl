html {
  height:100%
}

body {
  height:100%
  overflow-x: hidden;
  overflow-y: scroll;
}

.links line {
  stroke: gray
  stroke-width: 1px
}

.fixed {
  transition: 1.5s
  fill: black !important
}

#searchbar {
  position: absolute
  width: 500px
  background-color: gray
  border: 1px solid white
  text-align: center
  color: black
  border-radius: 6px
}

#searchbar ul {
  text-align: left
}

#searchbar li {
  list-style-type: none
  border-bottom: 1px solid white
  margin-bottom: 3px
}

#searchbar input {
  background: #a6a6a6
  width: 500px
  position: absolute
  color: white
  border-radius: 6px
}

input:focus {
  outline: none
}

.links line {
  stroke: black
}

.links line:hover, {
  stroke-width: 5px

  transition: .5s
}

.relevant {
  stroke: black !important
  transition: .25s
  stroke-width: 2.5px !important
}

.navbar {
  height: 10px;
  border-bottom: none
  position: absolute;
  background-color: #262626
}

#middle-column {
  position: absolute;
  left: 0;
  padding-left: 0px;
}

#type-bar {
  padding-left: 0px;
  width: 50%
}

#type-bar li {
  display: inline-block
}

body::-webkit-scrollbar {
 display: none
}

.main {
  height: 100%
}

main {
  height: 100%
}

#explorecontainer {
  background-color: #f2f2f2
  border-bottom: 3px solid #d2d2d2
}

#exploretable {
  background-color: #FFFFFf
}

#exploretable th {
  color: #ff3333
}

#exploretable tr:nth-child(even) {
  background-color: #d8d8d8
  width: 50px
}

#layout-choice {
  position: absolute
}

.dragLine {
  stroke: #ff3333
  stroke-width: 1px
  stroke-dasharray: 3,3
}

.tooltip {
  position: absolute
  z-index: 20
  visibility: hidden
  color: black
  background-color: gray
  padding: 2px
  border-radius: 2px
}

.node-container {
  width: 50px;
  height: 50px;
}

.node-circle {
  transition: .2s
}

.node-circle.primary {
  fill: darken(gray, 50%)
}

.node-circle.secondary {
  fill: lighten(gray, 50%)
}

.node-circle:hover {
r: 11px
z-index: 100
}

.selected-circle {
  fill: green !important
}

.not-selected {

}

.node-circle:hover {
  fill: red
  cursor: pointer
}

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child) {
  padding-right: 0;
  padding-left: 0;
}

[tree] li {
  list-style-type: none;
}

ul {
  padding-left: 15px;
}

.group-label {
  font-weight: bold;
}

div.checkbox {
  margin-top: 3px;
  margin-bottom: 3px;
}

.popover {
z-index: 1000
position: absolute
}

