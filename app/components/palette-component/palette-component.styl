palette {
  .palette-upload {
    margin-top: -250px
  }

  .palette-relevant {
    transition: 0.15s linear all;
  }

  .inner-palette-container {
    transition: 0.25s linear all;
    height: 100%
    text-align: center
    opacity: 0
    border-radius: 4px
    background-color: darken(gray, 30%)

    .palette-filter {
      padding: 3px
      font-size: 12px
      border: 0px
      border-radius: 0px
      font-weight: normal
      margin-right: 0.5em
    }
  }

  .inner-palette-container.expanded {
    display: block
    opacity: 1
  }

