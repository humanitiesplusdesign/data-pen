  .palette {

    circle.item {
      cursor: grab
    }

    circle.item.displayed {
      opacity: 0.3
    }
    circle.item.filtered {
      opacity: 0.1
    }

    .type {
      .glyphicon {
        margin-left: 0.25em
      }
    }
  }

  .palette-node-drag {
    position: absolute
    height: 16px
    width: 16px
  }

  .palette-node-drag {
    cursor: grabbing
  }

  .inverse-icon {
    color: white
  }
}