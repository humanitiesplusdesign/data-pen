configure-view

  .project-setup-container
    position: relative
    margin-top: 100px
    height: 500px
    background-color: #ffffff
    border-radius: 5px
    box-shadow: 0 1px 6px rgba(#000, 0.1)
    margin-bottom: 150px

    .header
      margin-top: 50px

    .left-side
      margin-top: 30px

      .title-warning
        position: absolute
        display: block
        text-align: right
        text-weight: 400
        top: 3px
        right: 3px
        font-size: 1em
        letter-spacing: 0.02em
        color: #ee1515
        opacity: 0

        &.visible
          opacity: 1

    .right-side
      margin-top: 30px

      .project-selection
        margin-top: 30px

      .project-dropdown-container
        position: relative
        display: block
        width: 180px
        height: 30px
        line-height: 1.8
        background: none
        overflow: hidden

        select
          width: 100%
          height: 100%
          margin: 0
          padding: 0 30px 0 10px
          font-size: 1em
          color: #3c3c3c
          cursor: pointer
          border: 1px solid rgba(#000, 0.3)
          border-radius: 3px
          box-shadow: 0 1px 1px rgba(#000, 0.05)

          &::-ms-expand
            display: none

          &:focus
            border: 1px solid rgba(#466bd3, 1)

        &::after
          content: '\25be'
          position: absolute
          top: 0
          right: 10px
          bottom: 0
          font-size: 1.2em
          color: #3c3c3c
          background: none
          pointer-events: none

      .project-pull-options
        margin-top: 30px

        label
          display: block;
          margin-top: -5px

          input
            box-shadow: none
            width: 13px;
            height: 13px;
            padding: 0;
            margin: 0 8px 0 0
            vertical-align: bottom;
            position: relative;
            top: 5px
            float: left

    .action-items
      position: absolute
      display: inline-block
      right: 50px
      bottom: 30px

      .push-left {
        margin-right: 20px
      }

      .space-above {
        margin-top: 20px
        border: 1px solid red
      }

      button
        position: relative
        float: right

      .save-project
        color: #1571ee
