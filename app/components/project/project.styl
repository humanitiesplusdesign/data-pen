project {
  .main-area {
    position: fixed
    width: 100%
    height: 100%
    padding-top: 3em
    background-color: #f4f4f4

    .control-area {
      position: fixed
      top: 42%
      right: 0px
      width: 4em
      padding: 1em

      .btn {
        margin-bottom: 1em
        box-shadow: 1px 1px 1px #999
      }
      
      .btn-circle {
        width: 30px;
        height: 30px;
        text-align: center;
        padding: 6px 0;
        font-size: 12px;
        line-height: 1.428571429;
        border-radius: 15px;
      }
      .btn-circle.btn-lg {
        width: 50px;
        height: 50px;
        padding: 10px 16px;
        font-size: 18px;
        line-height: 1.33;
        border-radius: 25px;
      }
      .btn-circle.btn-xl {
        width: 70px;
        height: 70px;
        padding: 10px 16px;
        font-size: 24px;
        line-height: 1.33;
        border-radius: 35px;
      }
    }

    .table-tab {
      top: 47%
      left: -2.25em
      padding: 0.5em 1em 0.5em 1em
      position: fixed
      border-style: none solid solid solid
      border-width: 1px
      border-color: #bbb
      border-radius: 0px 0px 3px 3px
      transform: rotate(270deg)
    }
  }
  .top-nav {
    position: fixed
    width: 100%
    height: 3em
    background-color: #fff
    box-shadow: 0px 0px 5px #999
    color: #444
    line-height: initial


    .nav-element {
      display: inline-block
      margin-top: 0.8em
      margin-left: 1em
    }

    .bibliography-link {
      float: right
      margin-right: 1em
    }

    .usage {
      float: right
    }

    .usage-chart {
      width: 300px
      float: right

      .progress {
        background-color: #ffff99
        height: 1em
        box-shadow: inset 2px 2px 2px -2px #999
        border-color: #ccc
        border-width: 1px
        border-style: solid

        .progress-bar {
          background-color: #99ff99
          box-shadow: inset 2px 2px 2px -2px #999
        }
      }
    }

    .usage-text {
      float: right
    }

    .muted {
      color: #bbb
    }

    .vertical-divider {
      margin-left: 2em
      margin-right: 1em
    }
  }
}