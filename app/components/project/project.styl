project {
  .main-area {
    position: fixed
    width: 100%
    height: 100%
    padding-top: 4em
    background-color: #f4f4f4
  }

  .top-nav {
    position: fixed
    width: 100%
    height: 4em
    background-color: #fff
    box-shadow: 0px 1px 4px rgba(#000, 0.1)
    color: #444
    line-height: initial
    font-size: 1.2em

    .nav-element {
      display: inline-block
      margin-left: 1em
      margin-top: 1.4em
    }

    .nav-link {
      cursor: pointer
      margin-left: 1em
    }

    .nav-link-active {
      color: #466bd3
      border-bottom: 1px solid #466bd3
    }

    .nav-link-inactive {
      color: #969696
      &:hover {
        border-bottom: 1px solid #969696
      }
    }

    .project-description a {
      color: #3e3e3e
      transition: .2s
      margin-right: 30px

      &:after {
        position: absolute
        margin-top: 3px
        padding-left: 15px
        transition: .2s
        content: "edit"
        text-transform: uppercase
        font-weight: 500
        letter-spacing: 0.02em
        font-size: 0.8em
        opacity: 0
        color: #aaaaaa
      }

      &:hover {
        margin-right: 60px

        &:after {
          opacity: 1
        }
      }
    }

    .bibliography-link {
      float: right
      margin-right: 1em
      margin-top: 1.3em
    }

    .bib-icon {
      width: 20px
      height: auto
      margin-left: 1em
      transition: .1s
      -webkit-transition: .1s
      -moz-transition: .1s
      -o-transition: .1s
      cursor: pointer

      &:hover {
        opacity: .5
      }
    }

    .back-icon {
      width: 20px
      height: auto
      margin-top: -5px
      margin-right: 1em
      margin-left: 1em
      cursor: pointer

      &:hover {
        opacity: .5
      }
    }

    .search {
      float: right
      margin-right: 1em
      margin-top: 1em
    }

    .search-container {
      position: relative
      width: 250px
      height: 20px
      float: right;
      margin: 1.1em 1em 0 1em

      .search-bar {
        outline: 0
        width: 250px
        padding: 5px 5px 5px 30px
        border: 1px solid rgba(#000, 0.3)
        border-radius: 5px

        &:focus {
          border: 1px solid rgba(#466bd3, 1)
        }
      }

      .search-image {
        position: absolute
        top: 6px
        left: 10px
        width: 12px
        opacity: .5
      }
    }

    .usage {
      float: right
    }

    .usage-chart {
      width: 120px
      float: right
      margin-top: 1.4em

      .progress {
        background-color: #e4e4e4
        height: 0.8em
        margin-top: 0.2em
        box-shadow: none

        .progress-bar {
          background-color: #6c6c6c
        }
      }
    }

    .usage-text {
      float: right
    }

    .muted {
      color: #bbb
    }

    .vertical-divider {
      font-size: 0.8em
      margin-left: 0.4em
      margin-right: 1.4em
    }
  }

  .nav-link {
    cursor: pointer
  }

  .interstitial {
    position: fixed
    width: 100%
    height: 100%
    z-index: 5000
    background-color: #f5f5f5
    opacity: 0.8
    pointer-events: default

    .loading-logo {
      position: fixed
      width: 80px
      height: auto
      top: 50%
      left: 50%
      margin-left: -40px
      margin-top: -40px
      animation: fade-in 2s ease
    }
  }

  .hide-interstitial {
    opacity: 0
    pointer-events: none
  }

  @keyframes fade-in {
    0% {
      opacity: 0
    }
    50% {
      opacity: 0
    }
    100% {
      opacity: .8
    }
  }
}
