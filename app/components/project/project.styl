project {
  .main-area {
    position: fixed
    width: 100%
    height: 100%
    padding-top: 3em
    background-color: #f4f4f4
  }
  .top-nav {
    position: fixed
    width: 100%
    height: 3em
    background-color: #fff
    box-shadow: 0px 0px 5px #999
    color: #444
    line-height: initial


    .nav-element {
      display: inline-block
      margin-top: 0.8em
      margin-left: 1em
    }

    .bibliography-link {
      float: right
      margin-right: 1em
    }

    .usage {
      float: right
    }

    .usage-chart {
      width: 150px
      float: right

      .progress {
        background-color: #f4f4f4
        height: 1em
        box-shadow: inset 2px 2px 2px -2px #999
        border-color: #ccc
        border-width: 1px
        border-style: solid

        .progress-bar {
          background-color: #54BAE3
          box-shadow: inset 2px 2px 2px -2px #999
        }
      }
    }

    .usage-text {
      float: right
    }

    .muted {
      color: #bbb
    }

    .vertical-divider {
      margin-left: 2em
      margin-right: 1em
    }
  }
}