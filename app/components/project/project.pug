.main-area(ng-show="$ctrl.currentView==='active'")
  active
.main-area(ng-show="$ctrl.currentView==='filter'")
  filter
.main-area(ng-show="$ctrl.currentView==='sources'")
  sources
.top-nav
  .nav-element.return-button
    img.back-icon.transition-200(src="./app/images/nav_bar/back.svg" ui-sref="projects" uib-popover="Back to projects" popover-placement="bottom-left" popover-popup-delay="750" popover-trigger="'mouseenter'")
  .nav-element.project-description.push-down
    a(ui-sref="configure({id:$ctrl.state.project.id, sourceId: 'Projects' })" ) {{ $ctrl.state.project.description.length > 30 ? $ctrl.state.project.description.substr(0, 27) + '...' : $ctrl.state.project.description }}
  .nav-element.vertical-divider.muted |
  span.nav-links
    .nav-element.nav-link.push-down(ng-class="{muted: $ctrl.currentView !== 'sources', active: $ctrl.currentView === 'sources'}", ng-click="$ctrl.setView('sources')") Sources
    .nav-element.nav-link.push-down(ng-class="{muted: $ctrl.currentView !== 'filter', active: $ctrl.currentView === 'filter'}", ng-click="$ctrl.setView('filter')") Filter
    .nav-element.nav-link.push-down(ng-class="{muted: $ctrl.currentView !== 'active', active: $ctrl.currentView === 'active'}", ng-click="$ctrl.setView('active')") Active
  .nav-element.search-container(ng-hide="$ctrl.currentView==='sources'")
    input.search-bar(placeholder="Search")
    img.search-image(src="./app/images/nav_bar/search.svg" width="12px" height="auto")
  .nav-element.bibliography-link
    img.bib-icon(src="./app/images/nav_bar/bibliography.svg" ng-click="$ctrl.openBibliographyModal($ctrl.currentView)")
  span.usage(ng-hide="$ctrl.currentView==='sources'")
    .nav-element.usage-chart
      .progress
        .progress-bar(ng-style="{ 'width': $ctrl.dataUsedProportion() +'%' }")
