.modal-header
  h4.modal-title#modal-title Add local properties to {{ $ctrl.titleText }}
.modal-body#modal-body
  br
  form.form-horizontal
    .form-group
      span#valueHelpBlock.help-block.col-md-offset-2.col-md-10 Create new properties or add values to existing properties
    .form-group
      label.col-md-2.control-label(for="keyField") Key
      .col-md-8
        input.form-control(type="text" id="keyField" placeholder="e.g. Place of Birth")
    .form-group
      label.col-md-2.control-label(for="valueField") Value
      .col-md-8
        input.form-control(type="text" id="valueField" placeholder="e.g. Helsinki" aria-describedby="valueHelpBlock")
      label.col-md-2.control-label
        button.select-button Apply
  br
  form.form-horizontal
    .form-group
      span#groupHelpBlock.help-block.col-md-offset-2.col-md-10 Add a group to node(s)
    .form-group
      label.col-md-2.control-label(for="groupField") Group
      .col-md-8
        input.form-control(type="text" id="groupField" aria-describedby="valueHelpBlock" ng-model="groupText")
      label.col-md-2.control-label
        button.select-button(ng-click="$ctrl.setGroup(groupText)") Apply
  br
  form.form-horizontal
    .form-group
      label.col-md-2.control-label Mark
      .col-md-8
        button.btn-danger.btn-circle(ng-click="$ctrl.setMark($ctrl.marks[0])")
        button.btn-warning.btn-circle(ng-click="$ctrl.setMark($ctrl.marks[1])")
        button.btn-success.btn-circle(ng-click="$ctrl.setMark($ctrl.marks[2])")
        button.btn-primary.btn-circle(ng-click="$ctrl.setMark($ctrl.marks[3])")
        button.btn-default.btn-circle(ng-click="$ctrl.setMark($ctrl.marks[4])")
      label.col-md-2.control-label
        button.select-button(ng-click="$ctrl.setMark()") Remove
.modal-footer
  button.cancel-button.transition-200(ng-click="$ctrl.close()") Close
