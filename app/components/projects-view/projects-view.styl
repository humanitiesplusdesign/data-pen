projects-view {
  .header-title {
    margin-top: 50px;
  }
  .header-subtitle {
    font-family: 'Roboto Mono', monospace
    font-size: 0.6em;
    color: #626262;
    margin-left: 20px;
  }
  .plus-icon {
    width: 16px;
    height: auto;
    margin: -5px 15px 0 10px;
  }
  .new-project {
    width: 175px;
    height: 37px;
    margin: 150px -15px 30px -10px;
    padding: 8px 0 0 5px;
    background-color: rgb(245, 245, 245);
    border: 1px solid rgba(21, 129, 230, 0.3);
    border-radius: 3px;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
    transition: .1s;
    -webkit-transition: .1s;
    -moz-transition: .1s;
    -o-transition: .1s;
  }
  .new-project:hover {
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
    cursor: pointer;
  }
  .new-project.text {
    font-size: 1.2em;
  }
  .sort-container {
    display: inline-block;
    width: 175px;
    height: 40px;
    float: right;
    border: 1px solid black;

  }
  .projects-list {
    margin: 0 -15px 50px -30px;
    list-style: none;
  }
  .project-cell {
    width: 100%;
    text-align: left;
    font-family: 'Roboto', sans-serif;
    padding: 35px 15px 35px 15px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    transition: .1s;
    -webkit-transition: .1s;
    -moz-transition: .1s;
    -o-transition: .1s;
  }
  .project-cell a:hover {
    text-decoration: none;
  }
  .project-cell:hover + .edit-project-icon {
    background-color: rgba(0, 0, 0, 0.02);
  }
  .citable-label {
    font-size: 1.3em;
    font-weight: 400;
  }
  .citable-label {
    color: #3c3c3c;
  }
  .citable-description {
    font-size: 1em;
    color: #3c3c3c;
  }
  .citable-date {
    font-size: 0.9em;
    color: #959595;
    text-align: right;
    float: right;
  }
  .edit-project-icon {
    margin-left: 15px;
    top: 3px;
    font-size: 1.2em;
  }
  .new-project a {
    color: rgb(21, 129, 230);
  }
  .spinner {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-left: 10px;
  }
  @keyframes spinner {
    to {
      transform: rotate(360deg);
    }
  }
  .spinner:before {
    content: '';
    box-sizing: border-box;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40px;
    height: 40px;
    margin-top: -10px;
    margin-left: -10px;
    border-radius: 50%;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-top-color: rgba(0, 0, 0, 0.6);
    animation: spinner .8s linear infinite;
  }
}
