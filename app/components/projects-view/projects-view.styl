projects-view {
  .header-title {
    margin-top: 50px
  }
  .header-subtitle {
    font-family: 'Roboto Mono', monospace
    font-size: 0.5em
    color: #466bd3
    margin-left: 20px
  }
  .head {
    margin-top: 150px
  }
  .new-project-button {
    width: 175px
    height: 37px
    margin: 0 -15px 30px -15px
    padding: 3px 0 0 20px
    border-radius: 3px
    border: none;
    border-bottom: 2px solid rgba(#000, 0.2)
    background-color: #466bd3
    background-image: url('../../app/images/plus.svg')
    background-position: 13px 12px
    background-size: 14px
    background-repeat: no-repeat
    font-size: 1.05em
    color: #f5f5f5
    outline: none;
    transition: .1s
    -webkit-transition: .1s
    -moz-transition: .1s
    -o-transition: .1s
  }
  .new-project-button:hover {
    background-color: rgba(#456ad2, 0.8)
    cursor: pointer
  }
  .sort-container {
    position: relative
    display: block
    float: right
    margin: 10px 0 0 0
    width: 130px
    height: 40px
    line-height: 2.3
    background: none
    overflow: hidden
  }
  .sort-label, .sort-container select {
    font-size: 0.8
  }
  .sort-container select {
    width: 100%
    height: 100%
    float: right
    margin: 0
    padding-right: 30px
    font-size: 1em
    color: #3c3c3c
    cursor: pointer
    border: none
    direction: rtl
  }
  .sort-select::-ms-expand {
    display: none
  }
  /* Arrow */
  .sort-container::after {
    content: '\25be'
    position: absolute
    top: 0
    right: 10px
    bottom: 0
    font-size: 1.2em
    color: #3c3c3c
    background: none
    pointer-events: none
  }
  .projects-list {
    margin: 0 -15px 50px -30px
    list-style: none
  }
  .project-cell {
    width: 100%
    text-align: left
    font-family: 'Roboto', sans-serif
    padding: 35px 0 35px 0
    border-top: 1px solid rgba(0, 0, 0, 0.1)
    transition: .1s
    -webkit-transition: .1s
    -moz-transition: .1s
    -o-transition: .1s
    z-index: -1
  }
  .project-cell a:hover {
    text-decoration: none
  }
  .project-cell:hover {
    background-color: rgba(#456ad2, 0.03)
  }
  .citable-label {
    font-size: 1.3em
    font-weight: 400
  }
  .citable-label {
    color: #3c3c3c
  }
  .citable-description {
    font-size: 1em
    color: #3c3c3c
  }
  .citable-date {
    font-size: 0.9em
    color: #959595
    text-align: right
    float: right
  }
  .edit-project-icon {
    margin-left: 15px
    top: 3px
    font-size: 1em
    opacity: 0
    z-index: 2
    color: rgba(#000, 0.3)
    transition: .2s
    -webkit-transition: .2s
    -moz-transition: .2s
    -o-transition: 2s
  }
  .edit-project-icon:hover {
    opacity: 1
  }
  .edit-project-icon.visible {
    opacity: .5
  }
  .new-project a {
    color: rgb(21, 129, 230)
  }
  .spinner {
    display: inline-block
    width: 15px
    height: 15px
    margin-left: 10px
  }
  @keyframes spinner {
    to {
      transform: rotate(360deg)
    }
  }
  .spinner:before {
    content: ''
    box-sizing: border-box
    position: absolute
    top: 50%
    left: 50%
    width: 40px
    height: 40px
    margin-top: -10px
    margin-left: -10px
    border-radius: 50%
    border: 2px solid rgba(#456ad2, 0.1)
    border-top-color: #456ad2
    animation: spinner 1s linear infinite
  }
}
