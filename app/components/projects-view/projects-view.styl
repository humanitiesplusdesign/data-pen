projects-view

  .head
    margin-top: 150px

  .message-text
    text-align: center
    font-size: 1.8em
    line-height: 1.3em
    color: #AAA

  .error-loading
    position: relative
    margin-top: 100px

  .sort-container
    position: relative
    display: block
    float: right
    margin: 10px 0 0 0
    width: 130px
    height: 40px
    line-height: 2.3
    background: none
    overflow: hidden

    select
      width: 100%
      height: 100%
      float: right
      margin: 0
      padding-right: 30px
      font-size: 1.2em
      color: #3c3c3c
      cursor: pointer
      border: none
      direction: rtl

    select::-ms-expand
      display: none

    &::after
      content: '\25be'
      position: absolute
      top: 0
      right: 10px
      bottom: 0
      font-size: 1.2em
      color: #3c3c3c
      background: none
      pointer-events: none

  .new-project-button
    width: 175px
    height: 37px
    margin: 0 0 30px 0
    padding: 1px 0 0 20px
    border-radius: 3px
    border: none
    border-bottom: 2px solid rgba(#000, 0.2)
    background-color: #466bd3
    background-image: url('../../app/images/general/plus_light.svg')
    background-position: 13px 12px
    background-size: 14px
    background-repeat: no-repeat
    font-size: 1.2em
    color: #f5f5f5
    outline: none
    transition: .1s
    -webkit-transition: .1s
    -moz-transition: .1s
    -o-transition: .1s

    &:hover
      background-color: rgba(#456ad2, 0.8)
      cursor: pointer

    &.none-position
      position: relative
      margin-left: 50%
      margin-top: 10px
      transform: translateX(-50%)

  .projects-list
    margin: 0 0 120px -15px
    list-style: none
    background-color: #fff
    border-radius: 5px
    box-shadow: 0 2px 6px rgba(#000, 0.1)
    padding-left: 0

    .project-cell
      width: 100%
      text-align: left
      padding: 35px 15px 35px 30px
      margin: 0 -15px 0 0
      border-bottom: 1px solid rgba(0, 0, 0, 0.1)
      color: #3c3c3c
      transition: .1s
      -webkit-transition: .1s
      -moz-transition: .1s
      -o-transition: .1s
      z-index: -1

      &:hover, a:hover
        //background-color: rgba(#456ad2, 0.03)
        text-decoration: none

    li:last-child
      border-bottom: none

    .citable-label
      color: #3c3c3c
      margin-bottom: 5px

    .citable-date
      font-size: 1.1em
      color: #959595
      text-align: left

    .citable-proj-date-range
      font-style: italic

    .citable-description
      margin-top: 20px
      font-size: 1.1em
      color: #3c3c3c

    .project-draw, .project-filter, .project-sources
      display: inline-block
      min-width: 180px
      max-width: 300px
      margin-left: 20px
      margin-top: 35px
      vertical-align: top
      font-size: 1.2em

    .project-draw
      margin-left: 40px

      .draw-item-counts
        display: inline-block
        text-align: right

      .draw-item-names
        margin-left: 5px
        display: inline-block

    .project-details-list-container
      padding: 20px
      border-radius: 3px

      &:hover
        background-color: rgba(#466bd3, 0.04)
        cursor: pointer

      &:before
        content: "Open "
        font-size: 0.9em
        opacity: 0
        color: #466bd3
        font-weight: 400
        display: inline-block
        margin-right: -32px
        -webkit-transition: all 250ms;
        transition: all 250ms;

      &:hover:before
        opacity: 1
        margin-right: 5px


      .project-details-list-title
        font-size: 1em
        text-decoration: underline
        font-weight: 500
        color: #3c3c3c
        cursor: pointer

      .project-details-list
        list-style: none
        padding-left: 0

        li
          font-size: 0.9em
          border: none !important
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          color: #3c3c3c

    .citable-sources
      color: #879fbf
      font-size: 0.85em

      label
        text-transform: uppercase
        display: none

      ul
        list-style: none

        li
          border: none !important
          margin-bottom: 5px
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis

    .project-options
      list-style: none
      display: inline-block
      float: right
      text-align: right
      font-size: 1.1em
      line-height: 1.8em
      margin-right: 30px
      margin-top: 50px
      opacity: 0
      color: rgba(#000, 1)
      transition: .2s
      -webkit-transition: .2s
      -moz-transition: .2s
      -o-transition: 2s
      text-decoration: none

      &.visible
        opacity: 1

      li
        opacity: .5
        border: none !important
        cursor: pointer

        &:hover
          opacity: .8

      .delete-project
        color: #b80000

  @keyframes spinner
    to
      transform: rotate(360deg)

  .spinner
    display: inline-block
    width: 15px
    height: 15px
    margin-left: 10px

    &:before
      content: ''
      box-sizing: border-box
      position: absolute
      top: 50%
      left: 50%
      width: 40px
      height: 40px
      margin-top: -10px
      margin-left: -10px
      border-radius: 50%
      border: 2px solid rgba(#456ad2, 0.1)
      border-top-color: #456ad2
      animation: spinner 1s linear infinite

  .no-projects
    margin-top: 20px
    text-align: center
    padding: 50px 0 50px 0
    margin-bottom: 30px
