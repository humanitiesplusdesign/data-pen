.container
  h1 Fibra
  h2 Your project sources
  .well(ng-repeat="source in $ctrl.projectSources")
    .pull-right
      button.btn.btn-xs.btn-danger(ng-click="$ctrl.deleteProjectSource($index)"): span.glyphicon.glyphicon-remove
    .form-group
      label Name
      input.form-control(type="text",ng-model="source.id")
    .form-group
      label SPARQL query endpoint address
      input.form-control(type="text",ng-model="source.sparqlEndpoint")
    .form-group
      label SPARQL update endpoint address
      input.form-control(type="text",ng-model="source.updateEndpoint")
    .form-group
      label SPARQL graph store protocol endpoint address
      input.form-control(type="text",ng-model="source.graphStoreEndpoint")
    .form-group
      label Graph
      input.form-control(type="text",ng-model="source.graph")
    .form-group
      label Type IRI
      input.form-control(type="text",ng-model="source.type")
    button.btn.btn-xs(ui-sref="projectSourceConfigurations({sourceId:source.id})",title="Examine project source configurations"): span.glyphicon.glyphicon-cog
  button.btn.btn-success(ng-click="$ctrl.addNewProjectSource()") Add new
  a(ui-sref="projects()") Back to projects
