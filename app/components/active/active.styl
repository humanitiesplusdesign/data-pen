active {

  display: inline-block
  height: 100%
  width: 100%

  .circular-menu {
    ul {
      li {
        a {
          color: black
        }
      }
    }
  }

  .expand-icon {
    width: 100px
    height: 400px
    background: url("../../app/images/active/node_menu/remove.svg")
    border: 1px solid red
  }

  .control-area {
    position: fixed
    top: 50px
    right: 10px
    width: 4em
    padding-top: 2em
    padding-right: 3em

    .btn {
      margin-bottom: 1em
      box-shadow: 1px 1px 3px #CCC
      outline: none
    }

    .btn-icon {
      width: 23px
      height: auto
      margin-top: -5px
      margin-left: -3px
      //margin-left: 1em
    }

    .btn-circle {
      width: 30px;
      height: 30px;
      text-align: center;
      padding: 6px 0;
      font-size: 12px;
      line-height: 1.428571429;
      border-radius: 15px;
    }
    .btn-circle.btn-lg {
      width: 50px;
      height: 50px;
      padding: 10px 16px;
      text-align: center;
      font-size: 18px;
      line-height: 1.33;
      border-radius: 25px;
      outline: none;
    }
    .btn-circle.btn-xl {
      width: 70px;
      height: 70px;
      padding: 10px 16px;
      font-size: 24px;
      line-height: 1.33;
      border-radius: 35px;
    }
  }

  .draggable-divider {
    top: -100%
    left: 0%
    margin-left: -3px
    width: 6px
    height: 300%
    opacity: 0.5
    background-color: gray
    position: absolute
  }

  .drag-tab {
    top: 49%
    left: 0%
    padding: 0.5em 1em 0.5em 1em
    width: 30px
    margin-left: -12px
    height: 100px
    background-color: gray
    position: absolute
    border-style: solid solid solid solid
    border-width: 1px
    border-color: black
    border-radius: 3px 3px 3px 3px
  }

  .ui-grid {
    border-width: 0px
    border-style: none
  }

  .main-table {
    height: 100%
    width: 0%
    position: absolute
    padding-bottom: 3em

    .main-grid {
      height: 100%
      width: 100%
    }
  }

  .main-canvas {
    height: 100%
    width: 100%
    position: absolute
    padding-bottom: 3em

    .main-svg {
      height: 100%
      width: 100%

      .main-background {
        fill: #f4f4f4
      }

      .node {
        .node-circle {
          stroke: #7E7E7E
          fill: #aaaaaa
        }
      }
    }
  }

  .node-search {
    position: absolute
    top: 100px
    left: 100px
    width: 350px

    .input-group {
      width: 350px
    }

    .custom-popup-wrapper {
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 1000;
      display: none;
      background-color: #f9f9f9;
    }

    .custom-popup-wrapper > .message {
      padding: 10px 20px;
      border-bottom: 1px solid #ddd;
      color: #868686;
    }

    .custom-popup-wrapper > .dropdown-menu {
      position: static;
      float: none;
      display: block;
      min-width: 160px;
      background-color: transparent;
      border: none;
      border-radius: 0;
      box-shadow: none;
    }
  }

  .no-results {
    margin-top: 0.7em
    margin-left: 40px
    opacity: 0.5
  }

  .input-group {
    border: 1px solid #ccc
    box-shadow: 0 1px 2px #CCC
    border-radius: 5px

    .input-group-addon {
      border: none
      background-color: #fff

      .addon-left {
        padding: 6px, 6px, 6px, 18px
        border-top-left-radius: 7px
        border-bottom-left-radius: 7px
      }

      .addon-right {
        border-top-right-radius: 7px
        border-bottom-right-radius: 7px
      }
    }

    input.form-control {
      border: none
      box-shadow: none
      padding-left: 1px
      padding-right: 0px

      &:focus {
        box-shadow: none
      }
    }

    @keyframes spinner {
      to {
        transform: rotate(360deg)
      }
    }

    .spinner {
      display: inline-block
      width: 13.5px
      height: 15px
      margin-left: 0px

      &:before {
        content: ''
        box-sizing: border-box
        position: absolute
        top: 50%
        //left: 50%
        width: 20px
        height: 20px
        margin-top: -10px
        margin-left: -10px
        border-radius: 50%
        border: 2px solid rgba(#456ad2, 0.1)
        border-top-color: #456ad2
        animation: spinner 1s linear infinite
        z-index: 10
      }
    }
  }
}
