active {

  display: inline-block
  height: 100%
  width: 100%

  .active-tooltip {
    position: absolute
    z-index: 20
    background-color: rgba(#f4f4f4, 0.8)
    color: #555555
    font-size: 0.9em
    margin-top: 1px
    padding: 3px
    padding-left: 6px
    padding-right: 6px
    border-radius: 2px
    opacity: 0
    transition: .1s
    -webkit-transition: .1s
    -moz-transition: .1s
    -o-transition: .1s
  }

  .circular-menu {
    box-shadow: 0px 1px 4px rgba(#000, 0.1)
    ul {
      li {
        a {
          color: black
        }
      }
    }
    &:after {
      content: ''
      box-sizing: border-box
      position: absolute
      width: 78px
      height: 78px
      //top: 50%;
      //left: 50%;
      border-radius: 100px
      border: 1px solid #ffffff
      box-shadow: inset 0px 1px 4px rgba(#000, 0.1)
    }
  }

  .expand-icon, .reconcile-icon, .remove-icon, .ghost-icon, .properties-icon {
    padding: 16px
    background-repeat: no-repeat
    -webkit-backface-visibility: initial !important
  }

  .expand-icon {
    background-image: url("../../app/images/active/node_menu/expand.svg")
    background-position: 0 2px
  }

  .reconcile-icon {
    background-image: url("../../app/images/active/node_menu/reconcile.svg")
    background-position: 2px 5px
  }

  .remove-icon {
    background-image: url("../../app/images/active/node_menu/remove.svg")
    padding: 15px
    background-position: 1px 7px
  }

  .ghost-icon {
    background-image: url("../../app/images/active/node_menu/ghost.svg")
    background-position: -4px 6px
  }

  .properties-icon {
    background-image: url("../../app/images/active/node_menu/properties.svg")
    padding: 15px
    background-position -2px 4px
  }

  .cold-node {
    font-size: 0.95em
    margin-top: 10px
    margin-left: 47px
    margin-bottom: -5px
    opacity: 0.5
    cursor: pointer
  }

  .resultType {
    width: 50px
    display: inline-block
    font-family: 'Roboto Mono', monospace
    font-size: 0.75em
    opacity: 0.5
    text-align: right
    margin-right: 8px
    margin-bottom: -0.3em
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
  }

  .resultActual {
  }

  .resultSource {
    display: inline-block
    font-family: 'Roboto Mono', monospace
    font-size: 0.75em
    margin-bottom: -0.3em
    opacity: 0.5
    margin-left: 8px
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
  }

  .control-area {
    position: fixed
    top: 50px
    right: 10px
    width: 4em
    padding-top: 2em
    padding-right: 3em

    .active-circle-button {
      width: 46px
      height: 46px
      border-radius: 100%
      border: none
      padding: 10px 14px
      margin: 0 0 1em 0
      background-color: #fff
      box-shadow: 0px 1px 4px rgba(#000, 0.1)
      transition: .1s
      -webkit-transition: .1s
      -moz-transition: .1s
      -o-transition: .1s

      &:focus {
        outline: 0
      }

      &:hover {
        background-color: #f9f9f9
      }

      &:active {
        background-color: #f5f5f5
      }

      &.button-active {
        box-shadow: 0 0 5px rgba(#466bd3, 0.7)
      }

      &.button-disabled {
        cursor: default !important
        opacity: 0.4 !important
        background-color: #fff !important
        border: none !important
      }

      .view-options-icon {
        width: 25px
        height: auto
        margin-top: -2px
        margin-left: -3px
      }

      .layers-icon {
        width: 20px
        height: auto
        margin-top: -2px
        margin-left: -1px
      }

      .snapshots-icon {
        width: 20px
        height: auto
        margin-top: -2px
        margin-left: -1px
      }

      .layouts-icon {
        width: 19px
        height: auto
        margin-top: -2px
        margin-left: 0
      }
    }

    .active {

    }

    .disabled {

    }
  }

  .active-options-popover {
    border: none
    box-shadow: 0px 1px 4px rgba(#000, 0.1)
    font-family: 'Roboto', sans-serif

    .arrow {
      display: none
    }

    h4 {
      font-size: 1.2em
      margin-bottom: 20px
    }

    .checkbox-title {
      margin-left: 7px
      font-size: 0.95em
    }

    .option-description {
      color: #a4a4a4
      font-size: 0.8em
      margin-top: 3px
      padding-left: 19px
    }

    .layer-description {
      color: #a4a4a4
      font-size: 0.8em
      // margin-top: 3px
      // padding-left: 19px
    }

    .view-options-popover {
      .linked-text {
        font-weight: 500
        color: #83b5db
      }

      .unlinked-text {
        font-weight: 500
        color: #e36b76
      }
    }

    .snapshots-popover {

    }

    .layouts-popover {

    }
  }

  .draggable-divider {
    top: -100%
    left: 0%
    margin-left: -3px
    width: 6px
    height: 300%
    opacity: 0.5
    background-color: gray
    position: absolute
    cursor: col-resize;
  }

  .drag-tab {
    top: 49%
    left: 0%
    padding: 0.5em 1em 0.5em 1em
    width: 30px
    margin-left: -12px
    height: 100px
    background-color: gray
    position: absolute
    border-style: solid solid solid solid
    border-width: 1px
    border-color: black
    border-radius: 3px 3px 3px 3px
  }

  .ui-grid {
    border-width: 0px
    border-style: none
  }

  .main-table {
    height: 100%
    width: 0%
    position: absolute
    padding-bottom: 3em

    .main-grid {
      height: 100%
      width: 100%
    }
  }

  .main-canvas {
    height: 100%
    width: 100%
    position: absolute
    padding-bottom: 3em

    .main-svg {
      height: 100%
      width: 100%

      .main-background {
        fill: #f4f4f4
      }

      .node {

        .node-circle {
          fill: #cbcbcb
          stroke: #7a7a7a

          &::after {
            content: ''
            display: block
            width: 30px
            height: 30px
            background-color: red
          }
        }
      }

      @keyframes node-loading-animation {
        0% {
          opacity: 1
        }
        50% {
          opacity: 0.3
        }
        100% {
          opacity: 1
        }
        // to {
        //   transform: rotate(360deg)
        // }
      }

      @keyframes node-jiggle {
        0% {
          transform: scale(0.95, 1.05)
        }
        50% {
          transform: scale(1.05, 0.95)
        }
        100% {
          transform: scale(0.95, 1.05)
        }
      }

      .loading {
        -webkit-animation: node-loading-animation 0.7s infinite linear
        animation: node-loading-animation 0.7s infinite linear
      }

      .jiggle {
        webkit-animation: node-jiggle 0.4s infinite linear
        animation: node-jiggle 0.4s infinite linear
      }

      .ghosted {
        opacity:0.3
      }

      .linked {
        fill: #e36b76
        stroke: #81393f
      }

      .unlinked {
        fill: #83b5db
        stroke: #335c7b
      }
    }
  }

  .node-search {
    position: absolute
    top: 100px
    left: 100px
    width: 250px

    .input-group {
      width: 250px
    }

    .custom-popup-wrapper {
      position: absolute;
      top: 100%;
      left: -40px !important
      z-index: 1000;
      display: none;
      background-color: #fff !important
      border-radius: 3px !important
      // border: 1px solid rgba(0, 0, 0, 0.15) !important
      border: none !important
      box-shadow: 0px 1px 4px rgba(#000, 0.1) !important
      -webkit-box-shadow: 0px 1px 4px rgba(#000, 0.1) !important
      margin-top: 1em

      .active > a {
        background-color: rgba(#000, 0.03) !important
        color: rgba(#000, 0.8)
      }
    }

    .custom-popup-wrapper > .message {
      padding: 10px 20px;
      border-bottom: 1px solid #ddd;
      color: #868686;
    }

    .custom-popup-wrapper > .dropdown-menu {
      position: static;
      float: none;
      display: block;
      min-width: 160px;
      background-color: transparent;
      border: none;
      border-radius: 0;
      box-shadow: none;

      li {
        cursor: pointer
      }
    }
  }

  .no-results {
    margin-top: 0.7em
    margin-left: 40px
    opacity: 0.5
  }

  .input-group {
    // border: 1px solid #ccc
    box-shadow: 0px 1px 4px rgba(#000, 0.1)
    border-radius: 5px

    .input-group-addon {
      border: none
      background-color: #fff

      .addon-left {
        padding: 6px, 6px, 6px, 18px
        border-top-left-radius: 7px
        border-bottom-left-radius: 7px
      }

      .addon-right {
        border-top-right-radius: 7px
        border-bottom-right-radius: 7px
      }
    }

    .dismiss-icon {
      position: absolute;
      width: 12px
      height: auto
      right: 10px
      top: 11px
      opacity: .4;
    }

    input.form-control {
      border: none
      box-shadow: none
      padding-left: 1px
      padding-right: 0px

      &:focus {
        box-shadow: none
      }
    }

    @keyframes spinner {
      to {
        transform: rotate(360deg)
      }
    }

    .spinner {
      display: inline-block
      width: 13.5px
      height: 15px
      margin-left: 0px

      &:before {
        content: ''
        box-sizing: border-box
        position: absolute
        top: 50%
        //left: 50%
        width: 20px
        height: 20px
        margin-top: -10px
        margin-left: -10px
        border-radius: 50%
        border: 2px solid rgba(#000, 0.1)
        border-top-color: rgba(#000, 0.4)
        animation: spinner 1s linear infinite
        z-index: 10
      }
    }
  }

  /***************** Table Grid styles ********************/

  .ui-grid-top-panel {
    background-color: red
  }

}
