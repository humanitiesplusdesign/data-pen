active {

  display: inline-block
  height: 100%
  width: 100%

  .active-tooltip {
    position: absolute
    z-index: 20
    background-color: gray
    color: white
    padding: 3px
    padding-left: 6px
    padding-right: 6px
    border-radius: 2px
    visibility: hidden
  }

  .circular-menu {
    box-shadow: 0px 1px 4px rgba(#000, 0.2)
    ul {
      li {
        a {
          color: black
        }
      }
    }
    &:after {
      content: ''
      box-sizing: border-box
      position: absolute
      width: 78px
      height: 78px
      //top: 50%;
      //left: 50%;
      border-radius: 100px
      border: 1px solid #ffffff
      box-shadow: inset 0px 1px 4px rgba(#000, 0.2)
    }
  }

  .expand-icon, .reconcile-icon, .remove-icon, .ghost-icon, .properties-icon {
    padding: 16px
    background-repeat: no-repeat
    -webkit-backface-visibility: initial !important
  }

  .expand-icon {
    background-image: url("../../app/images/active/node_menu/expand.svg")
    background-position: 0 2px
  }

  .reconcile-icon {
    background-image: url("../../app/images/active/node_menu/reconcile.svg")
    background-position: 2px 5px
  }

  .remove-icon {
    background-image: url("../../app/images/active/node_menu/remove.svg")
    padding: 15px
    background-position: 1px 7px
  }

  .ghost-icon {
    background-image: url("../../app/images/active/node_menu/ghost.svg")
    background-position: -4px 6px
  }

  .properties-icon {
    background-image: url("../../app/images/active/node_menu/properties.svg")
    padding: 15px
    background-position -2px 4px
  }

  .control-area {
    position: fixed
    top: 50px
    right: 10px
    width: 4em
    padding-top: 2em
    padding-right: 3em

    .btn {
      width: 46px
      height: 46px
      border-radius: 100%
      padding: 10px 14px
      margin: 0 0 1em 0
      background-color: #fff
      box-shadow: 0px 1px 4px rgba(#000, 0.2)
      transition: .1s
      -webkit-transition: .1s
      -moz-transition: .1s
      -o-transition: .1s

      &:focus {
        outline: 0
      }

      &:hover {
        background-color: #f9f9f9
      }

      &:active {
        background-color: #f5f5f5
      }

      .btn-icon {
        opacity: .8
      }

      .view-options {
        width: 25px
        height: auto
        margin-top: -2px
        margin-left: -4px
      }

      .snapshot {
        width: 20px
        height: auto
        margin-top: -2px
        margin-left: -2px
      }
    }
  }

  .draggable-divider {
    top: -100%
    left: 0%
    margin-left: -3px
    width: 6px
    height: 300%
    opacity: 0.5
    background-color: gray
    position: absolute
  }

  .drag-tab {
    top: 49%
    left: 0%
    padding: 0.5em 1em 0.5em 1em
    width: 30px
    margin-left: -12px
    height: 100px
    background-color: gray
    position: absolute
    border-style: solid solid solid solid
    border-width: 1px
    border-color: black
    border-radius: 3px 3px 3px 3px
  }

  .ui-grid {
    border-width: 0px
    border-style: none
  }

  .main-table {
    height: 100%
    width: 0%
    position: absolute
    padding-bottom: 3em

    .main-grid {
      height: 100%
      width: 100%
    }
  }

  .main-canvas {
    height: 100%
    width: 100%
    position: absolute
    padding-bottom: 3em

    .main-svg {
      height: 100%
      width: 100%

      .main-background {
        fill: #f4f4f4
      }

      .node {
        .node-circle {
          stroke: #7E7E7E
          fill: #aaaaaa
        }
      }
    }
  }

  .node-search {
    position: absolute
    top: 100px
    left: 100px
    width: 250px

    .input-group {
      width: 250px
    }

    .custom-popup-wrapper {
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 1000;
      display: none;
      background-color: #f9f9f9;
    }

    .custom-popup-wrapper > .message {
      padding: 10px 20px;
      border-bottom: 1px solid #ddd;
      color: #868686;
    }

    .custom-popup-wrapper > .dropdown-menu {
      position: static;
      float: none;
      display: block;
      min-width: 160px;
      background-color: transparent;
      border: none;
      border-radius: 0;
      box-shadow: none;
    }
  }

  .no-results {
    margin-top: 0.7em
    margin-left: 40px
    opacity: 0.5
  }

  .input-group {
    // border: 1px solid #ccc
    box-shadow: 0px 1px 4px rgba(#000, 0.2)
    border-radius: 5px

    .input-group-addon {
      border: none
      background-color: #fff

      .addon-left {
        padding: 6px, 6px, 6px, 18px
        border-top-left-radius: 7px
        border-bottom-left-radius: 7px
      }

      .addon-right {
        border-top-right-radius: 7px
        border-bottom-right-radius: 7px
      }
    }

    .dismiss-icon {
      position: absolute;
      width: 12px
      height: auto
      right: 10px
      top: 11px
      opacity: .4;
    }

    input.form-control {
      border: none
      box-shadow: none
      padding-left: 1px
      padding-right: 0px

      &:focus {
        box-shadow: none
      }
    }

    @keyframes spinner {
      to {
        transform: rotate(360deg)
      }
    }

    .spinner {
      display: inline-block
      width: 13.5px
      height: 15px
      margin-left: 0px

      &:before {
        content: ''
        box-sizing: border-box
        position: absolute
        top: 50%
        //left: 50%
        width: 20px
        height: 20px
        margin-top: -10px
        margin-left: -10px
        border-radius: 50%
        border: 2px solid rgba(#000, 0.1)
        border-top-color: rgba(#000, 0.4)
        animation: spinner 1s linear infinite
        z-index: 10
      }
    }
  }
}
