sources {

  display: inline-block
  height: 100%
  width: 100%

  .sources-main {
    width: 100%
    height: 100%
    padding-bottom: 3em

    .sources-left {
      display: inline-block
      position: absolute
      clear: left
      width: 30%
      height: 100%
      background-color: #f6f6f6
      border-color: #dddddd
      border-style: none solid none none
      border-width: 1px
      padding: 30px
      overflow-y: scroll
      padding-bottom: 3em

      .sources-head {
        position: relative
        width: 100%
        height: 80px

        h3 {
          font-size: 1.2em
        }

        .edit-sources-icon {
          float: right
          margin-top: 20px
          font-size: 1.4em
          opacity: .4

          &:hover {
            opacity: .8
            cursor: pointer
          }
        }

        .edit-sources-dialog-container {
          position: fixed
          top: 0
          left: 0
          width: 100%
          height: 100%
          z-index: 100
          background-color: rgba(#f5f5f5, 0.7)
          display: none

          &.visible {
            display: block
          }

          .edit-sources-dialog {
            position: fixed
            width: 400px
            height: 300px
            top: 50%
            left: 50%
            margin-top: -150px
            margin-left: -150px
            background-color: #fff
            border-radius: 5px
            box-shadow: 0 1px 20px rgba(#000, 0.05)
            border: 1px solid rgba(#000, 0.2)
            padding: 50px
          }
        }
      }

      .sources-list {
        margin-bottom: 150px

        label {
          font-size: 0.9em
          font-weight: normal
          display: block
          margin-left: 2em
        }

        h4, label {
          span {
            margin-left: 0.5em
          }
        }

        .glyphicon {
          font-size: 0.8em
        }

        .source-name {
          font-size: 0.9em
        }

        .class-list {
          margin-bottom: 50px
        }
      }
    }

    .sources-right {
      display: inline-block
      position: absolute
      left: 30%
      clear: right
      width: 70%
      height: 100%
      background-color: white
    }
  }
}
