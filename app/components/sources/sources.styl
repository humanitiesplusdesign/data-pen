sources {
  .sources-main {
    width: 100%
    height: 100%

    .sources-left {
      display: inline-block
      position: absolute
      clear: left
      width: 30%
      height: 100%
      background-color: #eeeeee
      border-color: #dddddd
      border-style: none solid none none
      border-width: 1px
      padding: 20px

      .sources-head {
        position: relative
        width: 100%
        height: 80px

        .pull-right {
          margin-top: 26px
        }
      }

      .sources-list {
        label {
          font-weight: normal
          display: block
          margin-left: 2em
        }

        h4, label {
          span {
            margin-left: 0.5em
          }
        }
      }
    }

    .sources-right {
      display: inline-block
      position: absolute
      left: 30%
      clear: right
      width: 70%
      height: 100%
      background-color: white
    }
  }
}