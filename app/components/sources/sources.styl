sources

  display: inline-block
  height: 100%
  width: 100%

  .sources-main
    width: 100%
    height: 100%
    padding-bottom: 3em

    .sources-left
      display: inline-block
      position: absolute
      clear: left
      width: 30%
      height: 100%
      background-color: #f6f6f6
      padding: 30px
      overflow-y: scroll
      padding-bottom: 3em

      .matrix-left
        padding: 30px
        overflow-x: scroll
        white-space: nowrap
        height: 100%

        ul
          list-style: none

        .matrix-property-container
          margin-left: 200px
          height: 150px

          .matrix-property-checkbox
            margin-left: 18px
            transform: rotate(90deg)

          .matrix-property
            // border: 1px solid blue
            display: inline-block
            width: 50px
            height: 150px

            &:last-child
              margin-right: 50px

            .matrix-property-label-container
              transform: rotate(-90deg)

              .matrix-property-label
                width: 150px
                white-space: nowrap
                margin-top: 100px
                overflow-x: hidden
                text-overflow: ellipsis
                margin-left: -15px

                .prop-label-span
                  margin-left: 10px
                  -webkit-touch-callout: none;
                  -webkit-user-select: none;
                  -khtml-user-select: none;
                  -moz-user-select: none;
                  -ms-user-select: none;
                  user-select: none;

        .matrix-source-container
          height: 50px

          .matrix-source
            // border: 1px solid blue
            display: inline-block
            width: 200px
            height: 50px

            .matrix-source-label
              display: inline-block
              width: 100%
              height: 50px
              text-align: right
              overflow-y: hidden
              white-space: normal
              text-overflow: ellipsis
              padding-right: 15px

          .matrix-cell
            border: 1px solid white
            display: inline-block
            width: 50px
            height: 50px
            vertical-align: top
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;

            .no-stat
              width: 20px
              opacity: 0.2
              margin-left: 50%;
              margin-top: 50%;
              transform: translate(-50%, -50%)

            &:last-child
              margin-right: 50px

            .matrix-cell-checkbox
              margin-left: 18px
              margin-top: 18px

        .matrix-total-container
          margin-top: 25px
          // margin-left: 150px
          height: 50px

      .sources-head
        position: relative
        width: 100%
        height: 80px

        .sources-list-title
          margin-top: 15px

        .edit-sources-icon
          width: 15px
          float: right
          margin-top: 20px
          font-size: 1.4em
          opacity: .6

          &:hover
            opacity: .3
            cursor: pointer

      .sources-category-title
        //text-transform: uppercase
        color: #8b8b8b

      .sources-list
        margin-bottom: 40px

        .source-title
          font-size: 1em

        .checkbox-container
          font-size: 1em
          font-weight: normal
          display: block
          margin-left: 2em

        .glyphicon-triangle-right
          font-size: 1em
          opacity: .3
          transform: scale(1, 0.8)
          -webkit-transform: scale(1, 0.8)

          &:hover
            pointer: cursor

        .triangle-rotated
          transform: scale(0.8, 1) rotate(90deg)
          -webkit-transform: scale(0.8, 1) rotate(90deg)

        .source-name
          margin-left: 0.5em
          font-size: 1.3em

        .class-list
          margin-bottom: 20px

        .type-name
          margin-left: 0.5em
          font-size: 1.1em

        .type-entities
          margin-left: 10px
          color: rgba(#000, 0.38)

    .sources-right
      display: inline-block
      position: absolute
      left: 30%
      clear: right
      width: 70%
      height: 100%
      background-color: #fbfbfb
      border-left: 1px solid #dfdfdf
      padding-top: 30px

      .properties-head
        position: relative
        width: 100%
        height: 80px
        padding-left: 40px
        padding-top: 5px

      .matrix-tabs
        ul
          margin-left: 40px

          li
            a
              font-size: 1.1em
              background: none
              text-align: center
              margin: 0
              padding: none !important
              padding-left: 5px
              padding-right: 5px
              margin-right: 10px
              color: #3c3c3c
              opacity: .4
              transition: .2s
              -webkit-transition: .2s
              -moz-transition: .2s
              -o-transition: .2s

              &:hover
                opacity: 1

        ul li.active > a
          opacity: 1
          color: #446bd3
          text-decoration: underline

