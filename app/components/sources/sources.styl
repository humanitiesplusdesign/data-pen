sources {

  display: inline-block
  height: 100%
  width: 100%

  .sources-main {
    width: 100%
    height: 100%
    padding-bottom: 3em

    .sources-left {
      display: inline-block
      position: absolute
      clear: left
      width: 30%
      height: 100%
      background-color: #f6f6f6
      padding: 30px
      overflow-y: scroll
      padding-bottom: 3em

      .sources-head {
        position: relative
        width: 100%
        height: 80px

        h3 {
          font-size: 1.2em
        }

        .edit-sources-icon {
          float: right
          margin-top: 20px
          font-size: 1.4em
          opacity: .4

          &:hover {
            opacity: .8
            cursor: pointer
            transform: rotate(15deg)
          }
        }
      }

      /* Add/edit sources modal styles */

      .available-sources-list {
        margin-top: 50px
        list-style: none
      }

      .sources-list {
        margin-bottom: 150px

        label {
          font-size: 0.9em
          font-weight: normal
          display: block
          margin-left: 2em
        }

        h4, label {
          span {
            margin-left: 0.5em
          }
        }

        .glyphicon {
          font-size: 0.8em
        }

        .source-name {
          font-size: 0.9em
        }

        .class-list {
          margin-bottom: 50px
        }
      }
    }

    .sources-right {
      display: inline-block
      position: absolute
      left: 30%
      clear: right
      width: 70%
      height: 100%
      background-color: white

      .matrix {
        border: 1px solid red

        ul {
          list-style: none
        }

        .matrix-property-container {
          margin-left: 150px
          height: 150px

          .matrix-property {
            border: 1px solid blue
            display: inline-block
            width: 50px
            height: 150px

            .matrix-property-label-container {
              position: absolute
              transform: rotate(-90deg)
              margin-left: -105px

              .matrix-property-label {
                width: 130px
                white-space: nowrap
                margin-top: 125px
                overflow-x: hidden
                text-overflow: ellipsis
              }
            }
          }
        }

        .matrix-source-container {
          height: 50px

          .matrix-source {
            border: 1px solid blue
            display: inline-block
            width: 150px
            height: 50px

            .matrix-source-label {
              display: inline-block
              width: 150px
              height: 50px
              text-align: right
              overflow-y: hidden
              text-overflow: ellipsis
              // vertical-align: middle
              padding-right: 5px
            }
          }

          .matrix-cell {
            border: 1px solid blue
            display: inline-block
            width: 50px
            height: 50px
            vertical-align: top
          }
        }
      }
    }
  }
}
