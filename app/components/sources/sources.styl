sources {

  display: inline-block
  height: 100%
  width: 100%

  .sources-main {
    width: 100%
    height: 100%
    padding-bottom: 3em

    .sources-left {
      display: inline-block
      position: absolute
      clear: left
      width: 30%
      height: 100%
      background-color: #f6f6f6
      border-color: #dddddd
      border-style: none solid none none
      border-width: 1px
      padding: 30px
      overflow-y: scroll
      padding-bottom: 3em

      .sources-head {
        position: relative
        width: 100%
        height: 80px

        h3 {
          font-size: 1.2em
        }

        .pull-right {
          margin-top: 26px
        }
      }

      .sources-list {
        margin-bottom: 150px

        label {
          font-size: 0.9em
          font-weight: normal
          display: block
          margin-left: 2em
        }

        h4, label {
          span {
            margin-left: 0.5em
          }
        }

        .glyphicon {
          font-size: 0.8em
        }

        .source-name {
          font-size: 0.9em
        }

        .class-list {
          margin-bottom: 50px
        }
      }
    }

    .sources-right {
      display: inline-block
      position: absolute
      left: 30%
      clear: right
      width: 70%
      height: 100%
      background-color: white
    }
  }
}
