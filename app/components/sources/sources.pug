.sources-main
  .sources-left
    .sources-head
      h3.pull-left Sources
      span.pull-right add
    .sources-list
      span(ng-repeat="source in $ctrl.actions.project.sources")
        h4(ng-click="$ctrl.projectsOpen[source.id] = !$ctrl.projectsOpen[source.id]")
          i.glyphicon.glyphicon-triangle-right(ng-show="!$ctrl.projectsOpen[source.id]")
          i.glyphicon.glyphicon-triangle-bottom(ng-show="$ctrl.projectsOpen[source.id]")
          span {{source.description}}
        .class-list(ng-show="$ctrl.projectsOpen[source.id] ? true : false")
          label(ng-repeat="clss in source.classList") 
            input(type="checkbox")
            span {{clss.description}}
