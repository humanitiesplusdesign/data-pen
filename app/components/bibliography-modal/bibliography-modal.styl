bibliography-modal
  p
    width: 300px
    margin-top: 15px

  .modal-body
    .source-type-container
      margin-bottom: 20px

      .source-container
        margin-bottom: 20px

    ul
      list-style: none
      line-height: 1.5em
      margin-left: -15px

      li
        width: 100%
        padding-left: 15px

  .modal-footer
    margin-top: 30px

    button
      position: relative
      appearance: none
      border: none
      width: 80px
      height: 30px
      background: none
      outline: none

      &:hover
        opacity: 0.4

    .select-button
      color: #1571ee
