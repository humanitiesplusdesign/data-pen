div#explorecontainer
  div#layout-choice
    label Force
      input(type="radio" ng-model="layout.choice" value="force")
    label Force Grid
      input(type="radio" ng-model="layout.choice" value="forcegrid")  
  svg#explore

div
  table#exploretable
    tr
      th Label
      th(ng-repeat="p in $ctrl.properties") {{ p.value }}
      th Actions
    tr(ng-repeat="item in $ctrl.primaryItems.concat($ctrl.secondaryItems)")
      td(ng-click="$ctrl.selectItem(item)") {{ item.label.value }}
      td(ng-repeat="p in item.localProperties", ng-click="$ctrl.selectItem(item)") {{ p.values[0].label.value }}
      td
        a(ng-click="$ctrl.delete(item)") Delete
