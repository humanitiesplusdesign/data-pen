div.btn-group(uib-dropdown)
  button#single-button.btn.btn-primary.btn-xs(type="button" uib-dropdown-toggle ng-disabled="disabled") {{ $ctrl.chosenTypes.primary ? $ctrl.chosenTypes.primary.label : "Primary Nodes" }}&nbsp;
    span.caret
  ul.dropdown-menu(uib-dropdown-menu role="menu" aria-labelledby="single-button")
    li(role="menuitem" ng-repeat="type in $ctrl.types")
      a(ng-click="$ctrl.primaryClick(type)") {{type.label}} ({{type.instances}})

