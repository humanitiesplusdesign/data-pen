construct-view {
  .dragLine {
    stroke: #ff3333
    stroke-width: 1px
    stroke-dasharray: 3,3
  }

  .tooltip {
    position: absolute
    z-index: 20
    visibility: hidden
    color: black
    background-color: gray
    padding: 2px
    border-radius: 2px
  }

  .node-container {
    width: 50px;
    height: 50px;
  }

  .node-circle {
    transition: .2s
    fill: none
    stroke: grey
  }

  .node-circle {
    stroke: darken(gray, 50%)
  }

  .node-circle.labeled {
    fill: lighten(gray, 50%)
  }

  .node-circle.verified {
    fill: darken(gray, 50%)
  }

  .node.secondary {
    opacity: 0.5
  }

  .node-circle.untyped {
    fill: none
    stroke: grey
    stroke-dasharray: 0.9
  }

  .node-circle:hover {
    r: 11px
    z-index: 100
  }

  .selected-circle {
    fill: green !important
  }

  .not-selected {

  }

  .node-circle:hover {
    fill: red
    cursor: pointer
  }

  #searchbar {
    position: absolute
    width: 500px
    background-color: gray
    border: 1px solid white
    text-align: center
    color: black
    border-radius: 6px
  }

  #searchbar ul {
    text-align: left
  }

  #searchbar li {
    list-style-type: none
    border-bottom: 1px solid white
    margin-bottom: 3px
    cursor: pointer
  }

  #searchbar li:hover {
    background-color: white
  }

  #searchbar input {
    background: #a6a6a6
    width: 500px
    color: white
    border-radius: 6px
  }

  .exploretable {
    width: initial
    max-width: initial
  }

  .property-popover {
    position: absolute;
    z-index: 20;
    background-color: lighten(gray, 50%);
    color: white;
    padding: 3px;
    min-width: 160px
    border-radius: 2px;

    .form-group {
      margin-bottom: 0px
    }

    .control-label {
      font-variant-caps: small-caps
      min-width: 150px

      .btn, a, .btn.dropdown-toggle {
        font-variant: normal
        background-color: lighten(gray, 50%)
        border: 0px
        box-shadow: inset 0 0px 0px
        color: darken(gray, 25%)
      }

      input.form-control {
        padding: 3px
        font-size: 12px
        border: 0px
        border-radius: 0px
        font-weight: normal
      }

      a:hover {
        background-color: lighten(gray, 40%)
      }

      ul.dropdown-menu {
        padding: 0px
        margin: 0px
        min-width: 0px
        border-radius: 0px
        border: 0px
        background-color: lighten(gray, 50%)
        font-size: 12px
      }

      .dropdown-menu > li > a {
        padding-left: 10px
      }

      .label-input {
        width: 110px
        height: 25px
        font-variant: normal
      }
    }
  }

  #verifycontainer {
    width: 35%
    height: 100%
    background-color: darken(gray, 30%)
    float: right
    position: fixed
    top: 0px
    right: 0px

    .verify-header {
      background-color: #cf5d5d
      font-variant-caps: all-small-caps
      font-size: 1.5em
      text-align: center
      color: darken(white, 10%)
      padding-bottom: 0.25em
    }

    .verify-content {
      color: black
      margin: 2em
    }

    .verify-result-group {
      margin-top: 2em
    }

    .verify-result-group-header {
      text-align: center
      font-variant-caps: all-small-caps
      font-size: 1.5em
      font-weight: bold
      margin-bottom: 0.5em
    }
  }
}
